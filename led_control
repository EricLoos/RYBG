int letters[] = {((a|b|c|d|e|g)<<8)+'A', ((b|c|d|e|g)<<8)+'D', ((a|b|d|e|f|g)<<8)+'E',
((a|e|f|g)<<8)+'F',((c|e|f|g)<<8)+'H',(e<<8)+'I',((a|b|c|e|f)<<8)+'M',((c|e|g)<<8)+'N',
((c|d|e|g)<<8)+'O',((e|g)<<8)+'R',((a|c|d|f|g)<<8)+'S',((d|e|f|g)<<8)+'T',((c|d|e)<<8)+'U',
