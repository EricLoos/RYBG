void print(int device, char *s ) {
  lc1.clearDisplay(device);
  int l = strlen(s);
  if(l>8)
     l = 8; 
  bool dp;
  int j = 0;
  if(HasDP(s)) {
    for(int i=0; i<10; i++)
      ledBuffer2[i] = 0;
    int k = 0;
    for(int i=0; i<l; i++) {
      if(s[i]=='.') {
        j++;
        ledBuffer2[i-1] = ledBuffer2[i-1] | 128;
      }
      else
        k++;
      ledBuffer2[i] = s[j];
      j++;
    }
    ledBuffer2[k]=0;
    bool b;
    for(int i=0; i<l; i++) {
      if((ledBuffer2[i] & 127) != 0 ) {
          b = (ledBuffer2[i] & 128 ) != 0;
          setChar(device, 7-i, ledBuffer2[i] & 127, b);
      }
    }
  }
  else {
    for(int i=0; i<l; i++) {
      setChar(device,7-i,s[i],false);
    }
  }
}
bool HasDP(char *s) {
  bool r = false;
  for(int i=0; i<strlen(s); i++) {
    if(s[i]=='.') {
      r = true;
      break;
    }
  }
  return r;
}
void setChar(int device, int pos, char ch, bool dp ) {
  int bits=0;
  if(ch!=176)
    ch = toupper(ch);
  for(int i=0;i<sizeof(letters)/sizeof(int); i++) {
    if(ch == (letters[i] & 255) ) {
      bits = (letters[i]>>8);
      break;
    }
  }
  if (bits!=0) {
    if(dp)
      bits = bits | 128;
    lc1.setRow(device,pos,bits);
  }
  else  
    lc1.setChar(device,pos,ch,dp);
}

