    ClearLEDs();
    if(i<4) {
      digitalWrite(pinRed+i,HIGH);
    }
    print(0,dows2[i]);
    delay(3000);
  }
}
void ClearLEDs() {
  for(int i=0;i<4;i++) {
    digitalWrite(pinRed+i,LOW);
  }
}
//char buffer[20];
void SetTime() {
  strcpy(buffer,__TIME__);
      int hours = GetInt(0,2);
      int minutes = GetInt(3,2);
      int seconds = GetInt(6,2);
      strcpy(buffer,__DATE__);
      int days = GetInt(4,2);
      int years = GetInt(7,4);  
      buffer[3]=0;
      int months = GetMonthInt(buffer);
      Serial.print("Month = ");
      Serial.print(months);
      Serial.print("; Text = ");
      Serial.println(buffer);
  setTime(hours, minutes, seconds, days, months, years%100);
  
          sprintf(buffer2,"%02d:%02d:%02d %d/%d/%d",hours, minutes, seconds, months, days, years%100);
        Serial.println(buffer2);
}
int GetInt(int f, int l ) {
  int r=0;
  char ch;
  for(int i=0;i<l;i++) {
    r *= 10;
    ch = buffer[i+f];
    if(ch==' ')
      ch = '0';
    r += ch-'0';
  }
  return r;
}
int GetMonthInt(char *s) {
  int r = 1;
  
  if(strcmp(s,"Jan")==0)
    r = 1;   
  if(strcmp(s,"Feb")==0)
    r = 2;   
  if(strcmp(s,"Mar")==0)
    r = 3;   
  if(strcmp(s,"Apr")==0)
    r = 4;   
  if(strcmp(s,"May")==0)
    r = 5;   
  if(strcmp(s,"Jun")==0)
    r = 6;
  if(strcmp(s,"Jul")==0)
    r = 7;   
  if(strcmp(s,"Aug")==0)
    r = 8;   
  if(strcmp(s,"Sep")==0)
    r = 9;
   
  if(strcmp(s,"Oct")==0)
    r = 10;
   
  if(strcmp(s,"Nov")==0)
    r = 11;
   
  if(strcmp(s,"Dec")==0)
    r = 12;
   
    
  return r;
}
