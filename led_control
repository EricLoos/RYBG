bool done = false;
bool serialMode = false;
int bufferPos = 0;
int LastChr = '0';
int dec = 0;
int TimeArray[] = {0,0,0,0,0,0,0};
void SetLEDs() {
  int chr = 0;
  if(Serial.available()>0)  {
    chr = Serial.read();
    Timeout = millis();
    if(chr<' ' && chr!=1) {
      if(bufferPos==0)
        ClearLEDs();
      bufferPos = 0;
      if(modeText) {
        ledBuffer[ledBufferPos] = 0;
        print(3,ledBuffer);
      }
      ledBufferPos  = 0;
      modeText=false;
    }
    else {
      
      if(modeText) {
        ledBuffer[ledBufferPos] = chr;
        ledBufferPos++;
      }
      else {
        chr = toupper(chr);
        bufferPos++;
        if(chr=='R')
          digitalWrite(pinRed,HIGH);
        if(chr=='Y' )
          digitalWrite(pinYellow,HIGH);
        if(chr=='B' )
          digitalWrite(pinBlue,HIGH);
        if(chr=='"' ) {
          modeText = true;
        }
        else {
          if(chr>='0' && chr<='9' ) {
             if(LastChr>='0' && LastChr<='9' ) {
                if( (bufferPos % 2 ) == 0  && bufferPos>0  )  {
                  dec = ( LastChr-'0' )*10 + chr-'0';
                  TimeArray[bufferPos/2-1] = dec;
                  if(bufferPos>=12) {
                    // setTime(hours, minutes, seconds, days, months, years);
                    setTime(TimeArray[3], TimeArray[4], TimeArray[5],
                        TimeArray[2], TimeArray[1], TimeArray[0] ); 
                        // YYMMDDHHMMSS  = 150525163155
                        for(int i=0;i<6;i++)  {
                          Serial.print(TimeArray[i]);
                          Serial.print(", ");
                        }
                        Serial.println("");
                  }
                }
             }
          }
        }
        if(chr=='G') {
          if(bufferPos==1)
            ClearLEDs();
        }
      }
    }
    LastChr = chr;
  }
  /*
  serialMode = false;
  int size = 0;
  char ch = 0;
  char chr = ' ';
  if(Serial.available()>0) {
    serialMode = true;
    chr = Serial.read();
    if(chr<0) {
      done = true;
      ClearLEDs();
    }
    serBuffer[bufferPos] = chr;    
    bufferPos++;    
  }  
  if(chr=='\n')
    done = true;
  if(chr=='\r')
    done = true;
  if(bufferPos>=bufferSize)
    done = true;

  if(done) {
    //ClearLEDs();
    size = 0;
    for(int i=0; i<bufferSize; i++) {
      ch = serBuffer[i];
      if(ch<=0)
        break;
      if(ch=='\n' || ch=='\r')
        break;
  
      if(ch=='R' || ch=='r')  {
        digitalWrite(pinRed,HIGH);
        size++;
      }
      if(ch=='Y' || ch=='y')  {
        digitalWrite(pinYellow,HIGH);
        size++;
      }
      if(ch=='B' || ch=='b' ) {
        digitalWrite(pinBlue,HIGH);
        size++;
      }
      if(ch=='g' || ch=='G') {
        size++;
      }      
    }  
    if(bufferPos<=0 && size==0 && serialMode)
      ClearLEDs();  
    bufferPos = 0;
  }
  //done = false;
  //bufferPos = 0;
  */
}
void print(unsigned long i) {
  sprintf(buff,"%8ul",i); 
  bool b = false;
  for(int i=0;i<8;i++) {
    b = false;
    if(i==7 || i==0)
      b = true;
    setChar(0,7-i,buff[i],b);
  }
  //delay(250);
}
