void print(int device, char *s ) {
  lc1.clearDisplay(device);
  int l = strlen(s);
  if(l>8)
     l = 8; 
  for(int i=0; i<l; i++)
    setChar(device,7-i, s[i],false);
}
void setChar(int device, int pos, char ch, bool dp ) {
  int bits=0;
  ch = toupper(ch);
  for(int i=0;i<sizeof(letters)/sizeof(int); i++) {
    if(ch == (letters[i] & 255) ) {
      bits = (letters[i]>>8);
      break;
    }
  }
  if (bits!=0) {
    if(dp)
      bits = bits | 128;
    lc1.setRow(device,pos,bits);
  }
  else  
    lc1.setChar(device,pos,ch,dp);
}
void setup() {
  SetTime();
  pinMode(pinRed,OUTPUT);  
  pinMode(pinYellow,OUTPUT);
  pinMode(pinBlue,OUTPUT);
  pinMode(pinGreen,OUTPUT);
  ClearLEDs();
  for(int i=0;i<4;i++) {
    digitalWrite(pinRed+i,HIGH);
  }
  delay(1000);
  ClearLEDs();
  delay(1000);
  for(int i=0;i<4;i++) {
    digitalWrite(pinRed+i,HIGH);
    delay(250);
    ClearLEDs();
  }  
  ClearLEDs();
  /*
  for(int i=0;i<4;i++)
    digitalWrite(pinRed+i,LOW);
    */
  lastMonth = 0; lastDay = 0; lastYear = 0;
  //sec10 = 0;
